{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true,
        "types": ["node"]
    },
    "include": [
        "next-env.d.ts",
        "cloudflare-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "rehype-image.mjs",
        "app/migrate.js",
        "next-sitemap.config.js",
        "next.config.mjs",
        "postcss.config.js",
        "prettier.config.js",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
